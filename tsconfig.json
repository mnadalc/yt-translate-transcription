{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["chrome"],
    "outDir": "./dist",
    "rootDir": "./extension",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["extension/**/*"],
  "exclude": ["node_modules", "dist"]
}
